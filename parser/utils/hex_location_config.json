{
    "_comment": "Configuration for parsing and displaying hex locations. Add new patterns when encountering edge cases in new scenario PDFs.",
    "gameMapPrefixes": [
        "GTC",
        "HCR",
        "OTR",
        "SIV",
        "SJW"
    ],
    "boxAbbreviations": {
        "Bermuda Hundred Box": "Bermuda Hund. Box",
        "Port Walthall Station Box": "Pt Walthall Sta Box"
    },
    "locationAbbreviations": {
        "Junction": "Jct",
        "Station": "Sta",
        "Church": "Ch",
        "Courthouse": "Ct Hse",
        "Court House": "Ct Hse",
        "Crossroads": "X-Roads",
        "Cross Roads": "X-Roads",
        "County": "Co."
    },
    "specialLocations": {
        "Upon CSA reorganization": {
            "hexCode": "CSA Reorg.",
            "locationName": null
        }
    },
    "patterns": [
        {
            "_comment": "Standard hex codes with optional game prefix: 'GTC N2311 (Locust Grove)', 'HCR W0330 (Winchester)'",
            "type": "hex",
            "regex": "^((?:GTC|HCR|OTR|SIV|SJW)\\s+)?([NSMW]\\d{4})(?:\\s+\\(([^)]+)\\))?$",
            "hexCodeGroups": [
                1,
                2
            ],
            "locationGroup": 3
        },
        {
            "_comment": "Plain 4-digit hex codes (HSN format): '0511 (Poplar Grove)', '0118'",
            "type": "hex",
            "regex": "^(\\d{4})(?:\\s+\\(([^)]+)\\))?$",
            "hexCodeGroups": [
                1
            ],
            "locationGroup": 2
        },
        {
            "_comment": "Reinforcement with see rule in parens: 'Reinforcement (see Rule 14)'",
            "type": "seeRuleReinforcementParen",
            "regex": "^Reinforcement\\s*\\(see\\s+Rule\\s+(\\d+)\\)$",
            "hexCodeTemplate": "Reinf. (Rule {1})"
        },
        {
            "_comment": "River box locations: 'York River Box', 'James River East'",
            "type": "riverBox",
            "regex": "^(York|James)\\s+River\\s*(Box|East|West)?$",
            "hexCodeTemplate": "{1} River {2}"
        },
        {
            "_comment": "Display locations: 'Display – York River'",
            "type": "display",
            "regex": "^Display\\s*[–-]\\s*(.+)$",
            "hexCodeTemplate": "Display: {1}"
        },
        {
            "_comment": "Turn reinforcements: 'Turn 7 Reinforcements (see 13.1)'",
            "type": "turnReinforcement",
            "regex": "^Turn\\s+(\\d+)\\s+Reinforcements?.*$",
            "hexCodeTemplate": "Turn {1} Reinf."
        },
        {
            "_comment": "Reinforcement with see rule: 'Reinforcement: see Special Rule 1'",
            "type": "seeRuleReinforcement",
            "regex": "^Reinforcement:?\\s+see\\s+(.+)$",
            "hexCodeTemplate": "Reinf. (see rule)"
        },
        {
            "_comment": "See rule reference: 'See 13.1'",
            "type": "seeRule",
            "regex": "^See\\s+(\\d+\\.\\d+)$",
            "hexCodeTemplate": "See {1}"
        },
        {
            "_comment": "Box locations: 'Winchester Box', 'Drewry's Bluff box'",
            "type": "box",
            "regex": "^(.+?)\\s+[Bb]ox$",
            "hexCodeTemplate": "{1} Box"
        },
        {
            "_comment": "Plain reinforcement: 'Reinforcement' -> 'Reinf.'",
            "type": "plainReinforcement",
            "regex": "^[Rr]einforcement$",
            "hexCodeTemplate": "Reinf."
        },
        {
            "_comment": "Date reinforcements: 'May 5 Reinforcement' -> 'May 5 Reinf.'",
            "type": "dateReinforcement",
            "regex": "^([A-Z][a-z]+\\s+\\d+)\\s+[Rr]einforcement$",
            "hexCodeTemplate": "{1} Reinf."
        },
        {
            "_comment": "Named reinforcements: 'Special Reinforcement' -> 'Special Reinf.'",
            "type": "namedReinforcement",
            "regex": "^(.+?)\\s+[Rr]einforcement$",
            "hexCodeTemplate": "{1} Reinf."
        },
        {
            "_comment": "Radius locations: 'Within 12 hexes of Hanover Junction'",
            "type": "radius",
            "regex": "^Within\\s+(\\d+)\\s+hexes?\\s+of\\s+(.+?)(?:\\s+\\([^)]+\\))?$",
            "hexCodeTemplate": "{1} hex radius",
            "locationGroup": 2
        },
        {
            "_comment": "Any hex within radius: 'Any hex within 5 hexes of S5113'",
            "type": "anyHexRadius",
            "regex": "^Any\\s+hex\\s+within\\s+(\\d+)\\s+hexes?\\s+of\\s+([NSM]\\d{4})$",
            "hexCodeTemplate": "{1}hex of {2}"
        },
        {
            "_comment": "Multi-hex locations: 'S4811, S4912 or S5017'",
            "type": "multiHex",
            "regex": "^([NSM]\\d{4}),?\\s+([NSM]\\d{4})(?:\\s+or\\s+([NSM]\\d{4}))?$",
            "hexCodeTemplate": "{1}/{2}"
        },
        {
            "_comment": "Hex range locations: 'S3134 to S5833^' (preserving footnote symbol)",
            "type": "hexRange",
            "regex": "^([NSM]\\d{4})\\s+to\\s+([NSM]\\d{4}[*^†‡§$+#]*)$",
            "hexCodeTemplate": "{1} to {2}"
        },
        {
            "_comment": "Plain 4-digit hex range: '0107 to 0114', '3233 to 4534'",
            "type": "hexRange",
            "regex": "^(\\d{4})\\s+to\\s+(\\d{4})$",
            "hexCodeTemplate": "{1} to {2}"
        },
        {
            "_comment": "Double plain hex range (HSN format): '0110 to 0114 0101 to 0109'",
            "type": "doubleHexRange",
            "regex": "^(\\d{4})\\s+to\\s+(\\d{4})\\s+(\\d{4})\\s+to\\s+(\\d{4})$",
            "hexCodeTemplate": "{1}-{2} / {3}-{4}"
        },
        {
            "_comment": "Bare parenthetical location: '(Camden Station)', '(Turn 2)'",
            "type": "bareParenthetical",
            "regex": "^\\(([^)]+)\\)$",
            "hexCodeTemplate": "({1})"
        },
        {
            "_comment": "Rule section reference: 'A6.1; WV Reinforcements'",
            "type": "ruleReference",
            "regex": "^([A-Z]?\\d+\\.\\d+);?\\s*(.*)$",
            "hexCodeTemplate": "{1}"
        },
        {
            "_comment": "Just 'Box' by itself",
            "type": "plainBox",
            "regex": "^[Bb]ox$",
            "hexCodeTemplate": "Box"
        },
        {
            "_comment": "Single letter zone designation (HSN): 'M', 'N'",
            "type": "zoneDesignation",
            "regex": "^([A-Z])$",
            "hexCodeTemplate": "Zone {1}"
        },
        {
            "_comment": "Reinforcement with turn in parens: 'Reinforcement (Turn 2)'",
            "type": "reinforcementTurnParen",
            "regex": "^Reinforcement\\s*\\(Turn\\s+(\\d+)\\)$",
            "hexCodeTemplate": "Turn {1} Reinf."
        },
        {
            "_comment": "Reinforcement Turn X: 'Reinforcement Turn 2'",
            "type": "reinforcementTurn",
            "regex": "^Reinforcement\\s+[Tt]urn\\s+(\\d+)$",
            "hexCodeTemplate": "Turn {1} Reinf."
        },
        {
            "_comment": "Reinf on Turn X: 'Reinf on Turn 1 (July 11)'",
            "type": "reinfOnTurn",
            "regex": "^[Rr]einf(?:orcement)?\\s+on\\s+[Tt]urn\\s+(\\d+).*$",
            "hexCodeTemplate": "Turn {1} Reinf."
        },
        {
            "_comment": "Reinforcement with date and rule: 'Reinforcement December 19th (see 16.2)'",
            "type": "reinforcementDateRule",
            "regex": "^Reinforcement\\s+([A-Z][a-z]+\\s+\\d+(?:st|nd|rd|th)?).*$",
            "hexCodeTemplate": "{1} Reinf."
        },
        {
            "_comment": "See Special Rule X: 'See Special Rule 1', 'See Special Rule 2A'",
            "type": "seeSpecialRule",
            "regex": "^See\\s+[Ss]pecial\\s+[Rr]ule\\s*(\\d*[A-Za-z]?)$",
            "hexCodeTemplate": "Special Rule {1}"
        },
        {
            "_comment": "See advanced rule: 'See advanced rule 3.2'",
            "type": "seeAdvancedRule",
            "regex": "^See\\s+[Aa]dvanced\\s+[Rr]ule\\s+(\\d+\\.?\\d*)$",
            "hexCodeTemplate": "Adv. Rule {1}"
        },
        {
            "_comment": "See section with comma: 'See 4.1, Washington Reinforcements'",
            "type": "seeSectionComma",
            "regex": "^See\\s+(\\d+\\.\\d+),?\\s*(.*)$",
            "hexCodeTemplate": "See {1}"
        },
        {
            "_comment": "See A-prefixed rule: 'See A2.4', 'See A6.1; WV Reinforcements'",
            "type": "seeAPrefixedRule",
            "regex": "^See\\s+(A\\d+\\.\\d+).*$",
            "hexCodeTemplate": "See {1}"
        },
        {
            "_comment": "Special Rule X by itself: 'Special Rule 4'",
            "type": "specialRuleOnly",
            "regex": "^Special\\s+Rule\\s+(\\d+)$",
            "hexCodeTemplate": "Special Rule {1}"
        },
        {
            "_comment": "Variable/Special Reinforcement with parens: 'Variable Reinforcement (see 12.1)'",
            "type": "variableReinforcement",
            "regex": "^(Variable|Special)\\s+Reinforcement\\s*\\(.*\\)$",
            "hexCodeTemplate": "{1} Reinf."
        },
        {
            "_comment": "County locations: 'In Hanover County'",
            "type": "county",
            "regex": "^[Ii]n\\s+(.+?)\\s+[Cc]ounty$",
            "hexCodeTemplate": "In {1} Co."
        },
        {
            "_comment": "Near locations: 'Near Petersburg'",
            "type": "near",
            "regex": "^[Nn]ear\\s+(.+)$",
            "hexCodeTemplate": "Near {1}"
        }
    ],
    "knownUnparseable": [
        "is only for use in the GTC Grand Campaigns",
        "may only provide support in hexes",
        "is available only on the James River",
        "is still available only on the James River",
        "and bridGes/ferries other than",
        "and brIdGes/ferrIes",
        "may provide two kinds of",
        "name, while the reverse side",
        "to the next higher number space",
        "the box the gunboat occupies",
        "and combat Phase",
        "on the display. corresponding",
        "Constant Reinforcement"
    ],
    "emptyLocationUnits": [
        "_comment: These unit types often have empty locations due to PDF parsing issues or special rules",
        "Wagon Train",
        "Naval Battery",
        "Gunboat",
        "gunboat"
    ]
}